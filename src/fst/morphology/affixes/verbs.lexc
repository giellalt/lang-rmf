!! ## Lexical verbs

!! The lexical setup follows the grammar, but
!! several lexica may probably be unified.

LEXICON BOLL
!! @LEXNAME@ primary verb, other than r-stem
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>d pretsuff ;
+PrfPrc:%>d PRFPRS ;

LEXICON TSEER
!! @LEXNAME@ primary verb, r-stem, d pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>d pretsuff ;
+PrfPrc:%>d PRFPRS ;

LEXICON TRAAD
!! **LEXICON @LEXNAME@** cns pres and id pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>id pretsuff ;

LEXICON TSUUV
!! **LEXICON @LEXNAME@** cns pres and nd pret
+Ind+Prs:v cns_pressuff ;
+Ind+Prt:nd%> pretsuff ;
+PrfPrc:nd PRFPRS ;

LEXICON LURR
!! **LEXICON @LEXNAME@** cns pres and d pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>d pretsuff ;
+PrfPrc:%>d PRFPRS ;

LEXICON DZAMB
!! **LEXICON @LEXNAME@** cns pres and id pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>id pretsuff ;
+PrfPrc:id PRFPRS ;

LEXICON MANG
!! **LEXICON @LEXNAME@** cns pres and jom pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt: pretsuff_jom ;

LEXICON DIKK
!! **LEXICON @LEXNAME@** cns pres and jom pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt: pretsuff_jom ;

LEXICON KAMM
!! **LEXICON @LEXNAME@** cns pres and jom pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt: pretsuff_jom ;




LEXICON BAHH
!! **LEXICON @LEXNAME@** cns pres and t pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>t pretsuff ;
+PrfPrc:t PRFPRS ;

LEXICON MEKK
!! **LEXICON @LEXNAME@** cns pres and l/n pret
+Ind+Prs: cns_pressuff ;
+Ind+Prt:%>l pretsuff ;
+Ind+Prt:%>n pretsuff ;

LEXICON D 
!! **LEXICON @LEXNAME@** for "to do", cns pres and jom pret
+Ind+Prs:el cns_pressuff ;
+Ind+Prt:ii pretsuff_jom ;
+PrfPrc:iil PRFPRS ;

LEXICON DZA
!! **LEXICON @LEXNAME@** vow pres and id pret
+Ind+Prs:a vow_pressuff ;
+PrfPrc:eel PRFPRS ;
+Ind+Prt:ei pretsuff_jom ;

LEXICON PILA
!! **LEXICON @LEXNAME@** cns pres and id pret "juoda"
+PrfPrc:il PRFPRS ;
+Ind+Prs+Sg1:iv%>a  #   ;
+Ind+Prs+Sg2:%>ha  #   ;
+Ind+Prs+Sg3:%>la  #   ;
+Ind+Prs+Pl1:iiv%>aha  #   ;
+Ind+Prs+Pl2:%>na #   ;
+Ind+Prs+Pl3:%>na  #   ;
+Ind+Prt:ij pretsuff ;


!! ## Transitive morphology

LEXICON RAKKAVELA
!! **LEXICON @LEXNAME@** cns pres and ad pret + parallel forms
+Ind+Prs:av cns_pressuff ;
+Ind+Prs+Sg3:ila # ;
+Ind+Prs+Sg3:ina # ;
+Ind+Prs+Pl2:ina # ;
+Ind+Prs+Pl3:ina # ;
+Ind+Prs+Pl2:ana # ;
+Ind+Prs+Pl3:ana # ;
+Ind+Prt:ad pretsuff ;

LEXICON PHAGARVELA
!! **LEXICON @LEXNAME@** cns pres and ard pret
+Ind+Prs:arv cns_pressuff ;
+Ind+Prs:erv cns_pressuff ;
+Ind+Prs+Sg3:irla # ;
+Ind+Prs+Sg3:ervela # ;
+Ind+Prt:ard pretsuff ;

LEXICON TSJALJEVELA
!! **LEXICON @LEXNAME@** cns pres and ed pret
+Ind+Prs:ev cns_pressuff ;
+Ind+Prt:ed pretsuff ;

LEXICON TSEEKJIVELA
!! **LEXICON @LEXNAME@**  id pret
+Ind+Prs+Sg1:ivaa # ;
+Ind+Prs+Sg2:iha # ;
+Ind+Prs+Sg3:ila # ;
+Ind+Prs+Pl1:ina # ;
+Ind+Prs+Pl2:ina # ;
+Ind+Prs+Pl3:ina # ;
+Ind+Prt:id pretsuff ;


LEXICON DZORALVELA
!! **LEXICON @LEXNAME@** cns pres and ad pret
+Ind+Prs:alv cns_pressuff ;
+Ind+Prs+Sg3:ila # ;
+Ind+Prs+Pl2:ina # ;
+Ind+Prs+Pl3:ina # ;
+Ind+Prt:ad pretsuff ;


!! ## Intransitive morphology

LEXICON GARUVELA
!! **LEXICON @LEXNAME@** cns pres and jom pret
